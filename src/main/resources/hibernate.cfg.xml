<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory >
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/news_server_data_coordinator?UseUnicode=true</property>
  <property name="hibernate.connection.username">ns_data_coordinator_manager</property>
  <property name="hibernate.connection.password">data_coordinator_manager_user</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQL55Dialect</property>
  <property name="hbm2ddl.auto">validate</property>
  <property name="hibernate.show_sql">false</property>
  <property name="hibernate.format_sql">true</property>
  <mapping class="com.dasbikash.news_server_data_coordinator.model.Language"/>
  <mapping class="com.dasbikash.news_server_data_coordinator.model.Country"/>
  <mapping class="com.dasbikash.news_server_data_coordinator.model.Newspaper"/>
  <mapping class="com.dasbikash.news_server_data_coordinator.model.Page"/>
  <mapping class="com.dasbikash.news_server_data_coordinator.model.Article"/>
  <mapping class="com.dasbikash.news_server_data_coordinator.model.ArticleImage"/>
  <mapping class="com.dasbikash.news_server_data_coordinator.model.ErrorLog"/>
  <mapping class="com.dasbikash.news_server_data_coordinator.model.GeneralLog"/>
  <mapping class="com.dasbikash.news_server_data_coordinator.model.ArticleUploadHistory"/>
  <mapping class="com.dasbikash.news_server_data_coordinator.model.ArticleUploadTarget"/>
 </session-factory>
</hibernate-configuration>
